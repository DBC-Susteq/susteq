.col-lg-12
	%h1.page-header Operations
.col-lg-12
	%h3 SMS low
	.table-responsive
		%table#dataTables-example.table.table-striped.table-bordered.table-hover.mt20
			%thead
				%tr
					%th Hub
					%th request date
					%th Amount
			%tbody
				- @sms.each do |sms|
					%tr
						%td= sms[:location_id]
						%td= sms[:date]
						%td= sms[:total]
