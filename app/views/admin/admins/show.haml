.container
  .row
    .col-sm-10
      %h1 Admin Profile
  .row
    .col-sm-6
      / left col
      %ul.list-group
        %li.list-group-item.text-muted Account Details
        %li.list-group-item.text-right
          %span.pull-left
            %strong Name
          = @admin.name
        %li.list-group-item.text-right
          %span.pull-left
            %strong Email
          = @admin.email
        %li.list-group-item.text-right
          %span.pull-left
            %strong Profile Created
          = @admin.created_at.strftime('%c')

    = link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, admin_admin_path(@admin), method: :delete, data: { confirm: 'Are you sure?' }
    = link_to '<i class="fa fa-pencil fa-fw"></i>'.html_safe, edit_admin_admin_path(@admin)
