.row
  .col-lg-12
    %h1.page-header= @pump.name
%h3 General information
.row
  .col-lg-6
    %table
      %col.col-lg-5
      %tr
        %th Name
        %td= @pump.name
      %tr
        %th Location ID
        %td= @pump.location_id
      %tr
        %th Type
        %td= @pump.type
      %tr
        %th Provider
        %td= link_to "#{@pump.provider.name}", admin_provider_path(id: @pump.provider_id)
      %tr
        %th Longitude
        %td= @pump.longitude
      %tr
        %th Latitude
        %td= @pump.latitude
      %tr
        %th Created at
        %td= @pump.created_at
      %tr
        %th Updated at
        %td= @pump.updated_at

%h3 Profit by month
=image_tag "chart.png", :style => "width: 100%; margin-bottom: 50px;"
.row
  .col-lg-12
    .table-responsive
      %table#dataTables-example.table.table-basic.table-bordered.table-hover
        %thead
          %tr
            %th Month
            %th Profit
        %tbody
          %tr.odd.gradeX
            %td May
            %td $ 23.835
          %tr.even.gradeC
            %td June
            %td $ 32.142
:javascript
  $(document).ready(function() {
      $('#dataTables-example').dataTable();
  });
