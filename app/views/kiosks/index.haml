.row
  .col-lg-12
    %h1.pull-left Kiosks
  / /.col-lg-12
%hr
=image_tag "map.png", :style => "width: 100%; margin-bottom: 50px;"
%h3= "Total credits sold: #{@total_credits_sold}"
.row
  .col-lg-12
    .table-responsive
      %table#dataTables-example.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th Status
            %th Credits Sold
        %tbody
          - @kiosks.each_with_index do |kiosk, index|
            - index % 2 == 0 ? classes = ["odd","gradeX"] : classes = ["even","gradeC"]
            %tr{:class => classes}
              %td= link_to "#{kiosk.name}", provider_kiosk_path(id: kiosk.id)
              %td= "[status here]"
              %td= "#{kiosk.credits_sold}"
