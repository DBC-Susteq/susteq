.row
.col-lg-12
	%h1.page-header
		= @kiosk.name
		%small - Kiosk
.col-lg-12
	%h3.pull-left General Information
.col-lg-6
	%table.gen-info
		%col.col-lg-5
		%col.col-lg-5
		%tr
			%th Kiosk Name
			%td= @kiosk.name
		%tr
			%th Location ID
			%td= @kiosk.location_id
		%tr
			%th Status Code
			%td
				.pull-left
					- case @kiosk.status_code
						- when -1
							%span.label.label-danger Danger
						- when 0
							%span.label.label-warning Warning
						- when 1
							%span.label.label-success Ok
.col-lg-6
	%table.gen-info
		%col.col-lg-5
		%col.col-lg-5
		%tr
			%th Longitude
			%td= @kiosk.longitude
		%tr
			%th Latitude
			%td= @kiosk.latitude
		%tr
			%th Created at
			%td= @kiosk.created_at.strftime('%b %d, %Y')
		%tr
			%th Last Updated at
			%td= @kiosk.updated_at.strftime('%b %d, %Y')
.col-lg-12
	.panel.panel-default.mt20
		.panel-body
			#chart-container
.col-lg-12
	%h3 Latest Transactions
	.table-responsive
		%table#dataTables-example.table.table-basic.table-bordered.table-hover.mt20
			%thead
				%tr
					%th Transaction ID
					%th Transaction Code
					%th Transaction Amount
					%th Transaction Date
			%tbody
				- @kiosk.transactions.each do |t|
					%tr
						%td= t.id
						%td= t.transaction_code
						%td= t.amount
						%td= t.transaction_time.strftime('%b %d, %Y')
.row
