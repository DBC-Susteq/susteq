.row
.col-lg-12
	%h1.page-header Pumps
.col-lg-12
	= render 'list'
.col-lg-12
	.panel.panel-default.mt20
		.panel-heading
			%i.fa.fa-map-marker.fa-fw
			Kiosks
			.pull-right
				.minimize.map-button
					%i.fa.fa-minus.fa-fw
		.panel-body#map.pumps-index
			Liters of Water Dispensed By Pump
			.pull-right
				.minimize.map-button
					%i.fa.fa-minus.fa-fw
		.panel-body
			#chart-container
.col-lg-12
	.panel.panel-default
		.panel-heading
			%i.fa.fa-map-marker.fa-fw
			Water pumps and kiosks
			.pull-right
				.minimize.map-button
					%i.fa.fa-minus.fa-fw
		.panel-body
			#map.pumps-index
%h3= "Total liters of water dispensed: #{@total_dispensed}"
= render 'list'
